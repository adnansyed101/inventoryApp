<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <%- include('./partials/head.ejs') %>
  <body>
    <header class="bg-slate-600 mb-4">
      <%- include('./partials/navbar.ejs') %>
    </header>
    <main class="container mx-auto">
      <h1 class="font-extrabold text-3xl mb-5">List of publishers</h1>
      <div class="grid grid-cols-3 auto-rows-fr gap-4 mb-5">
        <div class="card bg-neutral text-neutral-content p-5">
          <form action="/publisher">
            <div class="form-control">
              <input
                type="text"
                value="Marvel Cinematic Universe"
                class="input input-bordered"
                name="publisherNameUpdate"
                required
              />
            </div>
            <div class="card-actions justify-center mt-5">
              <button class="btn btn-primary">Change</button>
              <button class="btn btn-ghost">Delete</button>
            </div>
          </form>
        </div>
      </div>
      <h1 class="font-extrabold text-3xl mb-3">Create Publisher</h1>
      <form action="/publisher" method="POST">
        <div class="form-control">
          <label class="label">
            <span class="label-text">Publisher Name</span>
          </label>
          <input
            type="text"
            placeholder="Marvel Cinematic Universe"
            class="input input-bordered"
            name="publisherName"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary mt-5">
          Create Publisher
        </button>
      </form>
    </main>
  </body>
</html>
